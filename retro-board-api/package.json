{
  "main": "src/index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "tsc",
    "prestart": "yarn migration:run",
    "start": "ts-node src/index.ts",
    "test": "yarn jest --watch",
    "migration:create": "yarn typeorm migration:create -n",
    "premigration:run": "yarn clean && yarn build",
    "migration:run": "ts-node ./node_modules/.bin/typeorm migration:run",
    "premigration:revert": "yarn clean && yarn build",
    "migration:revert": "ts-node ./node_modules/.bin/typeorm migration:revert"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "helmet": "^4.1.1",
    "pg": "^8.4.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.28",
    "typescript": "^4.0.3"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/cors": "^2.8.7",
    "@types/express": "^4.17.8",
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.2",
    "@types/supertest": "^2.0.10",
    "class-validator": "^0.12.2",
    "jest": "^26.4.2",
    "sqlite3": "^5.0.0",
    "supertest": "^5.0.0",
    "ts-jest": "^26.4.1",
    "ts-node": "^9.0.0"
  }
}
